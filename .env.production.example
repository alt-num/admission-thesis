APP_NAME="ESSU Admission"
APP_ENV=production
APP_KEY=${{ APP_KEY }}
APP_DEBUG=false
APP_URL=${{ APP_URL }}

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================
# DATABASE
# DO NOT hardcode host/user/pass unless overriding
# ============================================================

DATABASE_URL=${{ DATABASE_URL }}

DB_CONNECTION=pgsql
DB_HOST=${{ DB_HOST }}
DB_PORT=5432
DB_DATABASE=${{ DB_DATABASE }}
DB_USERNAME=${{ DB_USERNAME }}
DB_PASSWORD=${{ DB_PASSWORD }}

# ============================================================
# SESSION STORAGE
# ============================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Filesystem & Queue
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# Redis (unused by you)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================
# MAIL
# ============================================================
MAIL_MAILER=smtp
MAIL_HOST=${{ MAIL_HOST }}
MAIL_PORT=${{ MAIL_PORT }}
MAIL_USERNAME=${{ MAIL_USERNAME }}
MAIL_PASSWORD=${{ MAIL_PASSWORD }}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="ESSU Admission"

# ============================================================
# AWS (optional)
# ============================================================
AWS_ACCESS_KEY_ID=${{ AWS_ACCESS_KEY_ID }}
AWS_SECRET_ACCESS_KEY=${{ AWS_SECRET_ACCESS_KEY }}
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================
# HRMS OAuth
# ============================================================
HRMS_OAUTH_CLIENT_ID=${{ HRMS_OAUTH_CLIENT_ID }}
HRMS_OAUTH_CLIENT_SECRET=${{ HRMS_OAUTH_CLIENT_SECRET }}
HRMS_OAUTH_REDIRECT_URI=${{ HRMS_OAUTH_REDIRECT_URI }}
HRMS_OAUTH_PROVIDER_URL=https://hr-production-eaf1.up.railway.app

VITE_APP_NAME="${APP_NAME}"
